# see http://editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
indent_size = 4
indent_style = tab
trim_trailing_whitespace = true
insert_final_newline = false

# npm is using 2 spaces when modifying package.json
[{package.json,*.yaml,pom.xml}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
