{
  "extends": "./tsconfig-base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "lib": [
      "ES2021",
      "dom"
    ],
    "strict": true,
    "strictNullChecks": true,
    "jsx": "react",
    "sourceMap": true,
    "module": "ES6"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.ts",
    "test/**/*.tsx",
    "development/**/*.ts",
    "development/**/*.tsx"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "reports"
  ],
  "references": [
    {
      "path": "../ui-components"
    }
  ]
}
