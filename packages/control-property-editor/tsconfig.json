{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "incremental": true,
    "lib": [
      "ES2021",
      "dom"
    ],
    "strictNullChecks": true,
    "outDir": "dist",
    "module": "ES6",
    "rootDir": ".",
    "baseUrl": ".",
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.ts",
    "test/**/*.tsx"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "coverage"
  ],
  "references": [
    {
      "path": "../control-property-editor-common"
    },
    {
      "path": "../ui-components"
    }
  ]
}
