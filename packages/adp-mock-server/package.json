    },
    "devDependencies": {
        "@jest/types": "30.0.1",
        "@types/adm-zip": "0.5.5",
        "@types/lodash": "4.14.202",
        "mockserver-node": "5.15.0",
        "rimraf": "5.0.5",
        "ts-node": "10.9.2",
