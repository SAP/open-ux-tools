<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">

	<ViewSettingsDialog
		id="viewSettingsDialog"
		confirm=".onConfirmViewSettingsDialog">
		<sortItems>
			<ViewSettingsItem
				text="{i18n>masterSort1}"
				key="{{2masterdetail.parameters.Object_Identifier.value.name}}"
				selected="true"/>
{{#if 2masterdetail.parameters.Object_Number.value.name}}
			<ViewSettingsItem
				text="{i18n>masterSort2}"
				key="{{2masterdetail.parameters.Object_Number.value.name}}"/>{{/if}}
		</sortItems>
{{#if 2masterdetail.parameters.Object_Number.value.name}}
		<filterItems>
			<ViewSettingsFilterItem
				id="filterItems"
				text="{i18n>masterFilterName}"
				multiSelect="false">
				<items>
					<ViewSettingsItem
						id="viewFilter1"
						text="{i18n>masterFilter1}"
						key="Filter1"/>
					<ViewSettingsItem
						id="viewFilter2"
						text="{i18n>masterFilter2}"
						key="Filter2"/>
				</items>
			</ViewSettingsFilterItem>
		</filterItems>
		<groupItems>
			<ViewSettingsItem
				text="{i18n>masterGroup1}"
				key="{{2masterdetail.parameters.Object_Number.value.name}}"/>
		</groupItems>{{/if}}
	</ViewSettingsDialog>
</core:FragmentDefinition>