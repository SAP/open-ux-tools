{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "outDir": "dist",
    "rootDir": "./src",
    "lib": [
      "ES2021",
      "ESNext.BigInt"
    ],
    "sourceMap": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "preserveConstEnums": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
    "../odata-annotation-core-types/src/types/metadata.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "references": [
    {
      "path": "../odata-annotation-core-types"
    }
  ]
}
