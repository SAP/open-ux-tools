{
    "extends": "../../tsconfig.json",
    "include": ["src", "test"],
    "exclude": ["dist", "node_modules", ".vscode-test", "reports"],
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "dist",
        "composite": true,
        "incremental": true,
        "jsx": "react",
        "lib": ["ES2020", "dom"],
        "preserveConstEnums": true,
        "strict": false,
        "target": "ES2020",
        "types": ["node", "jest"],
        "importsNotUsedAsValues": "remove"
    }
}
