{
    "compilerOptions": {
        "strict": false,
        "jsx": "react-jsx",
        "noEmit": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2020",
        "lib": ["ES2020", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "types": ["node", "jest", "@testing-library/jest-dom"]
    },
    "include": ["**/*", "global.d.ts"],
    "exclude": ["node_modules"]
}
