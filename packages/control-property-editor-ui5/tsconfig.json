{
    "extends": "./tsconfig-base.json",
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "incremental": true,
        "outDir": "dist",
        "skipLibCheck": true,
        "lib": ["ES2022", "dom"],
        "strict": true,
        "strictNullChecks": true,
        "jsx": "react",
        "rootDir": ".",
        "sourceMap": true,
        "module": "ES2022"
    },
    "include": ["src/**/*.ts", "../../types/sapui5",  "test/**/*.ts"],
    "exclude": ["dist", "node_modules", "reports"],
    "references": [
        {
            "path": "../control-property-editor-common"
        }
    ]
}
