{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "inlineSourceMap": true,
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "rootDir": "webapp",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {<% if (app.id.includes('.')) { %>
      "<%=app.id.replace(/\./g, '/')%>/*": [
        "webapp/*"
      ],
      <% } %>
      "<%- app.id %>/*": [
        "webapp/*"
      ]
    },
    "types": [ "@sapui5/ts-types-esm" ]
  },
  "include": [
    "webapp/**/*"
  ]
}