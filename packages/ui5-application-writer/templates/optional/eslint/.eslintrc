{ 
  "root": true,
  "plugins": [
      "fiori-custom"
  ],
  "overrides": [
      {
          "files": [
              "**/*.*"
          ],
          "excludedFiles": [
              "test/**",
              "target/**",
              "webapp/test/**",
              "webapp/localservice/**",
              "backup/**",
              "Gruntfile.js",
              "changes_preview.js",
              "gulpfile.js"
          ],
          "plugins": [
              "fiori-custom"
          ],
          "extends": [
              "eslint:recommended",
              "plugin:fiori-custom/fioriToolsDefault"
          ]
      },
      {
          "files": [
              "webapp/test/**"
          ],
          "plugins": [
              "fiori-custom"
          ],
          "extends": [
              "plugin:fiori-custom/fioriToolsTestcode"
          ]
      }
  ]
}