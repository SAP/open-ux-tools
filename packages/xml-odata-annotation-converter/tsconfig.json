{
  "extends": "../../tsconfig.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.json"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "preserveConstEnums": false
  },
  "references": [
    {
      "path": "../odata-annotation-core"
    },
    {
      "path": "../odata-annotation-core-types"
    },
    {
      "path": "../odata-vocabularies"
    }
  ]
}
