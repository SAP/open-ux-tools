{
    "name": "@sap-ux/jest-file-matchers",
    "version": "0.1.0",
    "description": "Jest matchers for files and folders",
    "repository": {
        "type": "git",
        "url": "https://github.com/SAP/open-ux-tools.git",
        "directory": "packages/jest-matchers"
    },
    "license": "Apache-2.0",
    "private": false,
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc --build",
        "watch": "tsc --watch",
        "clean": "rimraf --glob dist coverage *.tsbuildinfo",
        "format": "prettier --write '**/*.{js,json,ts,yaml,yml}' --ignore-path ../../.prettierignore",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "test": "jest --ci --forceExit --detectOpenHandles --colors --passWithNoTests",
        "link": "pnpm link --global",
        "unlink": "pnpm unlink --global"
    },
    "files": [
        "dist",
        "LICENSE",
        "!dist/*.map",
        "!dist/**/*.map"
    ],
    "dependencies": {
        "chalk": "4.1.2",
        "dir-compare": "3.3.0",
        "filenamify": "4.2.0",
        "jest-diff": "26.6.2",
        "minimatch": "3.0.4",
        "mkdirp": "1.0.4"
    },
    "devDependencies": {
        "typescript": "5.3.3"
    },
    "eslint-formatter-multiple": {
        "formatters": [
            {
                "name": "stylish",
                "output": "console"
            },
            {
                "name": "json",
                "output": "file",
                "path": "reports/lint/eslint.json"
            },
            {
                "name": "checkstyle",
                "output": "file",
                "path": "reports/lint/eslint.checkstyle.xml"
            }
        ]
    }
}
