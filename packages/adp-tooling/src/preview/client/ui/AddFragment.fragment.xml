<core:FragmentDefinition 
    xmlns="sap.m" 
    xmlns:core="sap.ui.core" 
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form" >
        <Dialog id="CreateSalesOrderDialog" title="Add XML Fragment" contentWidth="500px" class="sapUiRTABorder" >
            <content>
                <VBox class="sapUiSmallMargin">
                    <f:SimpleForm id="SimpleFormChange354"
                        editable="true"
                        layout="ResponsiveGridLayout"
                        labelSpanS="4"
                        singleContainerFullSize="false" >
                        <f:content>
                            <!-- Control type -->
                            <Label text="Control Type" />
                            <Text text="{/selectedControlName}" />

                            <!-- Target Aggregation -->
                            <Label text="Target Aggregation" />
                            <ComboBox
                                change="onAggregationChanged"
                                selectedKey="{/selectedAggregation/key}"
                                items="{
                                    path: '/targetAggregation',
                                    sorter: { path: 'text' }
                                }">
                                <core:Item key="{key}" text="{value}" />
                            </ComboBox>

                            <!-- Target Index -->
                            <Label text="Index" />
                            <ComboBox
                                change="onIndexChanged"
                                selectedKey='{/selectedIndex}'
                                items="{
                                    path: '/index',
                                    sorter: { path: 'text' }
                                }">
                                <core:Item key="{key}" text="{value}" />
                            </ComboBox>

                            <!-- Fragment Name input -->
                            <Label text="Fragment Name" />
                            <Input 
                                description=".fragment.xml" 
                                value="{/newFragmentName}" 
                                liveChange="onFragmentNameInputChange" >
                            </Input>
                        </f:content>
                    </f:SimpleForm >
                </VBox >
            </content>
            <beginButton>
                <Button 
                    id="createDialogBtn" 
                    text="Create"
                    press="onCreateBtnPress"
                    enabled="false"
                    type="Emphasized"/>
            </beginButton>
            <endButton>
                <Button 
                    id="closeDialogBtn" 
                    text="Cancel"
                    press="closeDialog"
                    type="Reject"/>
            </endButton>
        </Dialog>
</core:FragmentDefinition>