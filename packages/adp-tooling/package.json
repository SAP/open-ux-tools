{
    "name": "@sap-ux/adp-tooling",
    "description": "Tooling for UI5 adaptation projects",
    "repository": {
        "type": "git",
        "url": "https://github.com/SAP/open-ux-tools.git",
        "directory": "packages/adp-tooling"
    },
    "bugs": {
        "url": "https://github.com/SAP/open-ux-tools/issues?q=is%3Aopen+is%3Aissue+label%3Abug+label%3Aadp-tooling"
    },
    "version": "0.1.5",
    "license": "Apache-2.0",
    "author": "@SAP/ux-tools-team",
    "main": "dist/index.js",
    "scripts": {
        "build": "pnpm build:server && pnpm build:client",
        "build:server": "tsc --build tsconfig.server.json", 
        "build:client": "tsc --project tsconfig.client.json && babel --extensions .ts ./src-client -d ./dist/preview/client",
        "watch": "tsc --watch",
        "clean": "rimraf --glob dist test/test-output coverage *.tsbuildinfo",
        "format": "prettier --write '**/*.{js,json,ts,yaml,yml}' --ignore-path ../../.prettierignore",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "test": "jest --ci --forceExit --detectOpenHandles --colors --testPathPattern=test/unit",
        "test-u": "jest --ci --forceExit --detectOpenHandles --colors -u",
        "link": "pnpm link --global",
        "unlink": "pnpm unlink --global"
    },
    "files": [
        "LICENSE",
        "templates",
        "rta",
        "dist",
        "ui5.yaml",
        "bin",
        "!dist/*.map",
        "!dist/**/*.map"
    ],
    "dependencies": {
        "@sap-ux/axios-extension": "workspace:*",
        "@sap-ux/logger": "workspace:*",
        "@sap-ux/system-access": "workspace:*",
        "@sap-ux/ui5-config": "workspace:*",
        "ejs": "3.1.7",
        "mem-fs": "2.1.0",
        "mem-fs-editor": "9.4.0",
        "prompts": "2.4.2",
        "yazl": "2.5.1"
    },
    "devDependencies": {
        "@babel/cli": "7.22.10",
        "@sap-ux/project-access": "workspace:*",
        "@sap-ux/store": "workspace:*",
        "@sapui5/types": "1.117.0",
        "@types/ejs": "3.1.0",
        "@types/express": "4.17.17",
        "@types/mem-fs": "1.1.2",
        "@types/mem-fs-editor": "7.0.1",
        "@types/prompts": "2.0.14",
        "@types/supertest": "2.0.12",
        "@types/yazl": "2.4.2",
        "babel-preset-transform-ui5": "7.2.4",
        "dotenv": "16.0.0",
        "express": "4.18.2",
        "nock": "13.2.1",
        "rimraf": "5.0.1",
        "supertest": "6.3.2"
    },
    "engines": {
        "pnpm": ">=6.26.1 < 7.0.0 || >=7.1.0",
        "node": ">= 14.16.0 < 15.0.0 || >=16.1.0 < 17.0.0 || >=18.0.0 < 19.0.0"
    }
}
