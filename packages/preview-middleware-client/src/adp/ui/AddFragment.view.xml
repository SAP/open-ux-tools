<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
        <Dialog id="addNewFragmentDialog" title="Add XML Fragment" contentWidth="500px" class="sapUiRTABorder">
            <content>
                <f:SimpleForm id="addNewFragmentDialog_Form"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanS="4"
                    singleContainerFullSize="false">
                    <f:content>
                        <Label text="Control Type" />
                        <Text text="{/selectedControlName}" />
                        <Label text="Target Aggregation" />
                        <ComboBox
                            change="onAggregationChanged"
                            selectedKey="{/selectedAggregation/key}"
                            items="{
                                path: '/targetAggregation',
                                sorter: { path: 'text' }
                            }">
                            <core:Item key="{key}" text="{value}" />
                        </ComboBox>
                        <Label text="Index" />
                        <ComboBox
                            selectedKey='{/selectedIndex}'
                            items="{
                                path: '/index',
                                sorter: { path: 'text' }
                            }">
                            <core:Item key="{key}" text="{value}" />
                        </ComboBox>
                        <Label text="Fragment Name" />
                        <Input 
                            description=".fragment.xml" 
                            value="{/newFragmentName}" 
                            liveChange="onFragmentNameInputChange">
                        </Input>
                    </f:content>
                </f:SimpleForm>
            </content>
            <beginButton>
                <Button 
                    id="createDialogBtn" 
                    text="Create"
                    press="onCreateBtnPress"
                    enabled="false"
                    type="Emphasized" />
            </beginButton>
            <endButton>
                <Button 
                    id="closeDialogBtn" 
                    text="Cancel"
                    press="handleDialogClose"
                    type="Reject" />
            </endButton>
        </Dialog>
</mvc:View>