<Dialog id="addNewFragmentDialog"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"  
    title="Add XML Fragment" 
    contentWidth="500px" 
    class="sapUiRTABorder">
    <content>
        <f:SimpleForm id="addNewFragmentDialog_Form"
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanS="4"
            singleContainerFullSize="false">
            <f:content>
                <Label text="Control Type" />
                <Text text="{/selectedControlName}" />
                <Label text="Target Aggregation" />
                <Select
                    change="onAggregationChanged"
                    selectedKey="{/selectedAggregation/key}"
                    items="{
                        path: '/targetAggregation',
                        sorter: { path: 'text' }
                    }">
                    <core:Item key="{key}" text="{value}" />
                </Select>
                <Label text="Index" />
                <HBox alignItems="Center">
                    <Select
                        enabled="{/indexHandlingFlag}"
                        selectedKey='{/selectedIndex}'
                        items="{
                            path: '/index',
                            sorter: { path: 'text' }
                        }">
                        <core:Item key="{key}" text="{value}" />
                    </Select>
                    <core:Icon
                        useIconTooltip="false"
                        visible="{/specialIndexHandlingIcon}" 
                        src="sap-icon://message-information" 
                        class= "sapUiTinyMarginBegin" 
                        tooltip="{/iconTooltip}" />
                </HBox>
                <Label text="Fragment Name" />
                <Input 
                    description=".fragment.xml" 
                    value="{/newFragmentName}" 
                    liveChange="onFragmentNameInputChange">
                </Input>
            </f:content>
        </f:SimpleForm>
        <VBox 
            class="sapUiSmallMarginBeginEnd" 
            visible="false">
            <items>
                <MessageStrip
                    text="Have in mind that adding this change will also save the changes you have made to your project that are yet unsaved."
                    type="Warning"
                    showIcon="true"
                    class="sapUiSmallMarginBottom">
                </MessageStrip>
            </items>
        </VBox>
    </content>
    <beginButton>
        <Button 
            id="createDialogBtn" 
            text="Create"
            press="onCreateBtnPress"
            enabled="false"
            type="Emphasized" />
    </beginButton>
    <endButton>
        <Button 
            id="closeDialogBtn" 
            text="Cancel"
            press="handleDialogClose"
            type="Reject" />
    </endButton>
</Dialog>