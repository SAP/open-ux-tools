<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
        <Dialog id="controllerExtensionDialog" title="Extend With Controller" contentWidth="450px" class="sapUiRTABorder">
            <content>
                <f:SimpleForm id="controllerExtensionDialog_Form"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanS="4"
                    singleContainerFullSize="false">
                    <f:content>
                        <Label text="Controller Name" />
                        <Input 
                            description=".js" 
                            value="{/newControllerName}" 
                            liveChange="onControllerNameInputChange">
                        </Input>
                    </f:content>
                </f:SimpleForm>
                <f:SimpleForm id="controllerExtensionDialog_Form--existingController"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanS="9"
                    visible="false"
                    singleContainerFullSize="false">
                    <f:content>
                        <Label text="Controller extension has already been created" />
                        <Link
                            text="Open file"
                            emphasized="true"
                            href="vscode://file/{/controllerPath}" />                        
                    </f:content>
                </f:SimpleForm>
            </content>
            <beginButton>
                <Button 
                    id="createDialogBtn" 
                    text="Create"
                    press="onCreateBtnPress"
                    enabled="false"
                    type="Emphasized" />
            </beginButton>
            <endButton>
                <Button 
                    id="closeDialogBtn" 
                    text="Cancel"
                    press="handleDialogClose"
                    type="Reject" />
            </endButton>
        </Dialog>
</mvc:View>