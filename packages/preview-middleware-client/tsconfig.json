{
  "extends": "../../tsconfig.json",
  "include": [
    "src/**/*.ts",
    "test",
    "test/**/*.json",
    "types"
  ],
  "compilerOptions": {
    "lib": [
      "ES2020",
      "DOM"
    ],
    "target": "ES2022",
    "module": "ES2022",
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "open/ux/preview/client/*": [
        "./src/*"
      ],
      "mock/*": [
        "./test/__mock__/*"
      ]
    },
    "types": [
      "@sapui5/types",
      "jest"
    ]
  },
  "references": [
    {
      "path": "../control-property-editor-common"
    },
    {
      "path": "../eslint-plugin-fiori-tools"
    },
    {
      "path": "../i18n"
    }
  ]
}
