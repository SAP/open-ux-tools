{
  "extends": "../../tsconfig.json",
  "include": [
    "src",
    "test",
    "types"
  ],
  "files": [
    "./test/fixtures/api.json"
  ],
  "compilerOptions": {
    "lib": ["ES2020", "DOM"],
    "target": "es2022",
    "module": "es2022",
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "open/ux/preview/client/*": [
        "./src/*"
      ]
    },
    "types": [
      "@sapui5/types",
      "jest",
      "node"
    ]
  },
  "references": [
    {
      "path": "../control-property-editor-common"
    }, 
    {
      "path": "../eslint-plugin-fiori-tools"
    }
  ]
}
