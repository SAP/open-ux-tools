{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "incremental": true,
        "lib": ["ES2022", "DOM"],
        "strictNullChecks": true,
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": ".",
        "types": ["node", "jest"],
        "moduleResolution": "node",
        "useUnknownInCatchVariables": false
    },
    "include": ["src/**/*.ts"],
    "exclude": ["dist", "node_modules", "coverage"],
    "references": [
        {
            "path": "../logger"
        }
    ]
}
