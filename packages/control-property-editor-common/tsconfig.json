{
  "extends": "./tsconfig-base.json",
  "compilerOptions": {
    "lib": [
      "ES2021",
      "dom"
    ],
    "strict": true,
    "strictNullChecks": true,
    "module": "ES6"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.ts",
    "test/**/*.tsx",
    "development/**/*.ts",
    "development/**/*.tsx"
  ],
  "exclude": [
    "dist",
    "reports"
  ]
}
